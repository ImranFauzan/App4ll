<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FF9800"
    tools:context=".malayinstrument">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:text="MALAY TRADITIONAL INSTRUMENT"
            android:textAlignment="center"
            android:textColor="#D84315"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Gendang -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#D0CBCBFF"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gendang"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <ImageButton
                    android:id="@+id/btnGendangInfo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Info about Gendang" />
                </LinearLayout>

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gendang"
                android:contentDescription="Image of Gendang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="A traditional Malay drum used to create rhythm in music and dance performances. It is commonly played during cultural ceremonies."
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnGendangPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Play Sample" />
            </LinearLayout>

            <!-- Kompang -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#D0CBCBFF"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kompang"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:id="@+id/btnKompangInfo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Info about Kompang" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kompang"
                    android:contentDescription="Image of Kompang" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="A traditional Malay hand drum played by beating it with the palm. It is commonly used during weddings and parades."
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnKompangPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Play Sample" />
            </LinearLayout>

            <!-- Rebana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#D0CBCBFF"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rebana"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:id="@+id/btnRebanaInfo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Info about Rebana" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rebana"
                    android:contentDescription="Image of Rebana" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Traditional Malay frame drum played by hand. It is often used in group performances during religious events."
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnRebanaPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Play Sample" />
            </LinearLayout>

            <!-- Marwas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="#D0CBCBFF"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Marwas"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <ImageButton
                        android:id="@+id/btnMarwasInfo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Info about Marwas" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/marwas"
                    android:contentDescription="Image of Marwas" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="A small traditional Malay hand drum. It is commonly used in Zapin music to create fast and rhythmic beats."
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnMarwasPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Play Sample" />
            </LinearLayout>

    </LinearLayout>
</ScrollView>